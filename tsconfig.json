{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "lib": ["es6", "dom"],
    "types":[
      "node",
      "chai",
      "mocha"
    ]
  },

  "exclude": [
    "node_modules",
    "dts",
    "testing",
    "lib"
  ]
}