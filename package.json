{
  "name": "ts-httpexceptions",
  "version": "2.1.3",
  "description": "Provide exception for HTTP Rest API",
  "main": "lib/index.js",
  "typings": "dts/index.d.ts",
  "scripts": {
    "prepublish": "npm run tsc:compile",
    "coverage": "npm run test-cov && npm run test-remap",
    "tslint": "tslint ./src/*.ts",
    "release:major": "npm run build:doc && npm run commit:doc ",
    "release:minor": "npm version minor && npm publish && git push --follow-tags",
    "release:patch": "npm version patch && npm publish && git push --follow-tags",
    "test": "NODE_ENV=test mocha",
    "test:cov": "NODE_ENV=test nyc npm test",
    "test:travis": "NODE_ENV=test nyc npm test | coveralls",
    "tsc": "tsc",
    "tsc:compile": "rm -rf ./lib && tsc --project tsconfig.compile.json",
    "build:doc": "typedoc --target ES6 --module commonjs --name TsHttpExceptions --exclude *.spec.ts --externalPattern *.spec.ts --out docs/ src/**/",
    "commit:doc": "git status | grep -qF 'working directory clean' || (git commit -m 'build documentation' && git push origin master)"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/romakita/httpexceptions"
  },
  "keywords": [
    "Exceptions",
    "Throwable",
    "Rest",
    "HTTP",
    "Typescript"
  ],
  "author": "Romakita",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/romakita/httpexceptions/issues"
  },
  "homepage": "https://github.com/romakita/httpexceptions",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/express": "^4.0.32",
    "@types/mocha": "^2.2.31",
    "@types/node": "^6.0.38",
    "chai": "^2.1.0",
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.2",
    "mocha": "^3.3.0",
    "nyc": "^10.3.0",
    "remap-istanbul": "^0.9.5",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typedoc": "0.5.10",
    "typedoc-plugin-external-module-name": "^1.0.9",
    "typescript": "^2.2.2"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage",
      "docs",
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-lcov"
    ],
    "all": true
  }
}
